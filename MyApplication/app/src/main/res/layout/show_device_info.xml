<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded"
    android:padding="8dp">

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:text="이름"
        android:textSize="24dp" />

    <Switch
        android:id="@+id/onOff_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:textColorLink="?attr/textColorAlertDialogListItem" />

    <!--아래 세개는 꺼진 상태일때 안보여야 함-->
    <TextView
        android:id="@+id/distance_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="거리"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/beaconDistance_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/distance_textView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:text="00m"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/onOff_switch"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/onOff_switch"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="상태"
        android:textSize="24dp"
        />
</RelativeLayout>
